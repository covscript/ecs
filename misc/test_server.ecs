import network.*
var sock = new tcp.socket
sock.connect(tcp.endpoint("127.0.0.1",222))
loop
    var line = system.in.getline()
    sock.send(line + "\n")
    if line == "@exit"
        break
    end
    while sock.available() == 0
        runtime.delay(10)
    end
    while sock.available() != 0
        system.out.print(sock.receive(sock.available()))
        runtime.delay(10)
    end
end
